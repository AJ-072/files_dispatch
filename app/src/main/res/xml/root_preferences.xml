<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:icon="@drawable/ic_setting"
        app:title="@string/settings"
        app:widgetLayout="@layout/change_user_view">
        <ListPreference
            app:allowDividerAbove="true"
            app:entries="@array/storage_entries"
            app:entryValues="@array/storage_entry_values"
            app:iconSpaceReserved="false"
            app:key="destination_folder"
            app:title="@string/destination"
            app:useSimpleSummaryProvider="true" />
        <Preference
            app:allowDividerAbove="true"
            app:iconSpaceReserved="false"
            app:key="clear_history"
            app:title="Clear All History" />
        <CheckBoxPreference
            app:allowDividerAbove="true"
            app:iconSpaceReserved="false"
            app:key="update_while_share"
            app:summary="Receive FilesDispatch updates During Transfer "
            app:title="Update Without Internet" />
    </PreferenceCategory>

</PreferenceScreen>